if command -v pkg_add >/dev/null ; then
    pkg() {
        flag=${1#-}
        shift       
        case $flag in
            a) doas pkg_add -D snap "$@" ;;
            u) doas pkg_add -D snap -u "$@" ;;
            d) doas pkg_delete "$@" ;;
            s) pkg_info -D snap -Q "$@" ;;
            i) pkg_info -D snap "$@" ;;
            f) pkg_info -D snap -E "$@" ;;
            l) pkg_info
        esac
    }
fi
