# programs
alt + Return
    tabbed -d -c -r 2 st -w ''
#    st
alt + w
    tabbed -d -c surf -e
alt + shift + w
    chromium --new-window
alt + r
    st -T floating-st -n floating-st -e ranger
alt + x
    slock -m "$(bonsai)"
Print
    scrap -n
control + Print
    scrap

# dmenus
alt + p
    menu run -p 'Run:'
alt + o
    dedit
alt + u
    tasks
alt + c
    clip
alt + i
    mus -m

# misc
alt + shift + k
    keys

# volume / media
alt + '
    vol -inc 2
alt + ;
    vol -dec 2
alt + /
    media -t
alt + >
    media -n
alt + <
    media -p
alt + ]
    media -sa
alt + [
    media -sb

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# berry hotkeys
super + {h, j, k, l}
    berryc window_move {-50 0, 0 50, 0 -50, 50 0}

super + shift +  {h, j, k, l}
    berryc window_resize {-50 0, 0 50, 0 -50, 50 0}

super + {0-9}
    berryc switch_workspace {0-9}

super + shift + {0-9}
    berryc send_to_workspace {0-9}

super + m
    berryc window_monocle

super + f
    berryc fullscreen

super +  p
    berryc snap_right

super + o 
    berryc snap_left

super + n
    berryc toggle_decorations

super + Tab
    berryc cycle_focus

super + q
    berryc window_close

super + c
    berryc window_center

~button1
    berryc pointer_focus
